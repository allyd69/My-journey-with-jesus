@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --background: 250 18% 21%;
  --foreground: 40 20% 88%;
  --card: 248 16% 27%;
  --card-foreground: 40 20% 88%;
  --popover: 248 16% 27%;
  --popover-foreground: 40 20% 88%;
  --primary: 32 48% 65%;
  --primary-foreground: 250 18% 21%;
  --secondary: 35 12% 62%;
  --secondary-foreground: 250 18% 21%;
  --muted: 248 16% 27%;
  --muted-foreground: 35 12% 62%;
  --accent: 32 48% 65%;
  --accent-foreground: 250 18% 21%;
  --destructive: 0 84% 60%;
  --destructive-foreground: 40 20% 88%;
  --border: 248 16% 30%;
  --input: 248 16% 30%;
  --ring: 32 48% 65%;
  --radius: 0.5rem;
}

* {
  border-color: hsl(var(--border));
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', sans-serif;
  background-color: #2C2A3E;
  color: #E0DCD1;
  min-height: 100vh;
}

.font-display {
  font-family: 'Cormorant Garamond', serif;
}

.font-body {
  font-family: 'Inter', sans-serif;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: #3D3B52;
}

::-webkit-scrollbar-thumb {
  background: #D4A276;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: #E0DCD1;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(212, 162, 118, 0.3);
  }
  50% {
    box-shadow: 0 0 40px rgba(212, 162, 118, 0.5);
  }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out forwards;
}

.animate-slide-in {
  animation: slideIn 0.5s ease-out forwards;
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* Gradient backgrounds */
.bg-gradient-warm {
  background: linear-gradient(135deg, #2C2A3E 0%, #3D3B52 50%, #2C2A3E 100%);
}

.bg-gradient-cinematic {
  background: linear-gradient(180deg, rgba(44, 42, 62, 0.95) 0%, rgba(61, 59, 82, 0.9) 50%, rgba(44, 42, 62, 0.95) 100%);
}

/* Glass effect */
.glass {
  background: rgba(61, 59, 82, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* Text gradient */
.text-gradient {
  background: linear-gradient(135deg, #D4A276 0%, #E0DCD1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Card hover effect */
.card-hover {
  transition: all 0.3s ease;
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
}

/* Button shine effect */
.btn-shine {
  position: relative;
  overflow: hidden;
}

.btn-shine::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    to right,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 100%
  );
  transform: rotate(30deg);
  transition: all 0.6s;
}

.btn-shine:hover::after {
  left: 100%;
}

/* Focus styles */
button:focus-visible,
a:focus-visible,
input:focus-visible,
textarea:focus-visible {
  outline: 2px solid #D4A276;
  outline-offset: 2px;
}

/* Selection color */
::selection {
  background: rgba(212, 162, 118, 0.3);
  color: #E0DCD1;
}
